# Declare three variables called num1, num2 and num3. Assign each variable a number value
num1 = 599
num2 = 5
num3 = 3

# Now, compare num1 and num2 and display the larger value

if num1 > num2:
    print(num1)
else:
    print(num2)

# Next, determine whether num1 is odd or even and display the result

if num1 % 2 == 0:
    print("num1 is equal number")
else:
    print("num1 is odd number")

# Next, write a conditional statement to sort the three numbers from largest to smallest

if num3 > num2 and num3 > num1:
    print(num3)

if num2 > num3 and num2 > num1:
    print(num2)

if num1 > num2 and num1 > num3:
    print(num1)

# or if num2 < num3 < num1 or num1 < num3 < num2:
if num3 > num2 and num3 < num1 or num3 > num1 and num3 < num2:
    print(num3)
if num1 < num3 and num1 > num2 or num1 > num3 and num1 < num2:
    print(num1)
if num2 > num3 and num2 < num1 or num2 < num3 and num2 > num1:
    print(num2)

if num3 < num2 and num3 < num1:
    print(num3)
if num2 < num3 and num2 < num1:
    print(num2)
if num1 < num2 and num1 < num3:
    print(num1)
